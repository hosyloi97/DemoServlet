<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>showEmps.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ShowListEmps</servlet-name>
        <servlet-class>control.AddNewEmp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowListEmps</servlet-name>
        <url-pattern>/AddNewEmp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowFormEdit</servlet-name>
        <servlet-class>control.EditEmp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowFormEdit</servlet-name>
        <url-pattern>/EditEmp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditEmp</servlet-name>
        <servlet-class>control.SaveEmp</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EditEmp</servlet-name>
        <url-pattern>/SaveEmp</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteEmp</servlet-name>
        <servlet-class>control.DeleteEmp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEmp</servlet-name>
        <url-pattern>/DeleteEmp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
